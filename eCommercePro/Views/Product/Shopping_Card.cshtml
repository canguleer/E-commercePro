@model List<CartLine>
@{
	ViewBag.Title = "Shopping_Card";
	Layout = "~/Views/Shared/_LCommerce.cshtml";
}

@using eCommercePro.Models.ViewData;


<!-- Content -->
<div id="content">

	<!-- Ship Process -->
	<div class="ship-process padding-top-30 padding-bottom-30">
		<div class="container">
			<ul class="row">
				<!-- Step 1 -->
				<li class="col-sm-3 current">
					<div class="media-left"> <i class="fa fa-shopping-cart" aria-hidden="true"></i> </div>
					<div class="media-body">
						<span>Adım 1</span>
						<h6>Alışveriş Kartı</h6>
					</div>
				</li>

				<!-- Step 2 -->
				<li class="col-sm-3">
					<div class="media-left"> <i class="fas fa-credit-card"></i> </div>
					<div class="media-body">
						<span>Adım 2</span>
						<h6>Ödeme Metodları</h6>
					</div>
				</li>

				<!-- Step 3 -->
				<li class="col-sm-3">
					<div class="media-left"> <i class="fas fa-truck"></i> </div>
					<div class="media-body">
						<span>Adım 3</span>
						<h6>Teslimat</h6>
					</div>
				</li>

				<!-- Step 4 -->
				<li class="col-sm-3">
					<div class="media-left"> <i class="fas fa-check"></i> </div>
					<div class="media-body">
						<span>Adım 4</span>
						<h6>İşlem Sonucu</h6>
					</div>
				</li>
			</ul>
		</div>
	</div>

	<!-- Shopping Cart -->
	<section class="shopping-cart padding-bottom-60" id="Detay">
		
	</section>

	<!-- Clients img -->
	<section class="light-gry-bg clients-img">
		<div class="container">
			<ul>
				<li><img src="~/Content/images/c-img-1.png" alt=""></li>
				<li><img src="~/Content/images/c-img-2.png" alt=""></li>
				<li><img src="~/Content/images/c-img-3.png" alt=""></li>
				<li><img src="~/Content/images/c-img-4.png" alt=""></li>
				<li><img src="~/Content/images/c-img-5.png" alt=""></li>
			</ul>
		</div>
	</section>

	<!-- Newslatter -->
	<section class="newslatter">
		<div class="container">
			<div class="row">
				<div class="col-md-6">
					<h3>Subscribe our Newsletter <span>Get <strong>25% Off</strong> first purchase!</span></h3>
				</div>
				<div class="col-md-6">
					<form>
						<input type="email" placeholder="Your email address here...">
						<button type="submit">Subscribe!</button>
					</form>
				</div>
			</div>
		</div>
	</section>
</div>
<!-- End Content -->
<!-- Rights -->
@section scripts{
	<script>
		$(function () {
			$.post('@Url.Action("_GetCartList", "Product")', function (result) {
				$('#Detay').html(result);
			});
		});		
	</script>
}


