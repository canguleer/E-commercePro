@model IEnumerable<eCommercePro.Models.DAL.Brand_Model>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LPanel.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Brand.brandName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model.modelName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Brand.brandName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model.modelName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
