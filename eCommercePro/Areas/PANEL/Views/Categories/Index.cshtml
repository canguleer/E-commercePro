@model IEnumerable<eCommercePro.Models.DAL.Category>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_LPanel.cshtml";
}
<div class="container pb-5">
	<div class="row">
		<div class="col-md-12">
			<div class="col-md-1"></div>
			<div class="col-md-10">
				<div class="container margin-right-10"></div>
		

				<hr style="margin-left:30px;"/>

				<p style="margin-top:60px; margin-left:30px;">

					@Html.ActionLink("Yeni Kategori", "Create", null, new { @class = "btn btn-primary" })
				</p>
				<hr style="margin-left:30px;" />

				<table class="table table-bordered table-striped" style="margin-left:30px;" >
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.categoryName)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.code)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.status)
						</th>
						<th></th>
					</tr>

					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.categoryName)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.code)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.status)
							</td>
							<td>
								@Html.ActionLink("Güncelle", "Edit", new { id = item.id }, new { @class ="btn btn-success" })

								@Html.ActionLink("Sil", "Delete", new { id = item.id }, new { @class = " btn btn-danger" })
							</td>
						</tr>
					}

				</table>
			</div>
			<div class="col-md-1"></div>
		</div>
	 </div>
	</div>
		
