@model IEnumerable<eCommercePro.Models.DAL.ProductDetail>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_LPanel.cshtml";
}
<div class="container pb-5">
	<div class="row">
		<div class="col-md-12">
			<div class="col-md-1"></div>
			<div class="col-md-10">
				<h2>Index</h2>

				<p style="margin-top:100px;  margin-left:30px; margin-bottom:30px;">
					@Html.ActionLink("Create New", "Create",null, new { @class = "btn btn-primary" })
				</p>
				<table class="table table-bordered table-striped" style="margin-left:30px;">
					<tr>
						<th>
							@Html.DisplayNameFor(model => model.title)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.notes)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.image1)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.image2)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.image3)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.image4)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.date)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.durum)
						</th>
						<th>
							@Html.DisplayNameFor(model => model.Product.productnName)
						</th>
						<th></th>
					</tr>

					@foreach (var item in Model)
					{
						<tr>
							<td>
								@Html.DisplayFor(modelItem => item.title)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.notes)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.image1)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.image2)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.image3)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.image4)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.date)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.durum)
							</td>
							<td>
								@Html.DisplayFor(modelItem => item.Product.productnName)
							</td>
							<td>
								@Html.ActionLink("Güncelle", "Edit", new { id = item.id }, new { @class = "btn btn-success" })
								@Html.ActionLink("Sil", "Delete", new { id = item.id }, new { @class = "btn btn-danger" })
							</td>
						</tr>
					}

				</table>
			</div>
		</div>
		<div class="col-md-1"></div>
	</div>
</div>
